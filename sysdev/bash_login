# .bash_login
#

# only user has permissions on own files
#
umask 077


# add personal Script and Bin to PATH
#
if [[ -d ~/Script && -d ~/Bin ]] ; then
	export PATH=$PATH:~/Script:~/Bin
fi


# add extern headers
# add extern dynamic library
#
if [ -d ~/Develop ] ; then
	export CPATH=~/Develop/include
	export LD_LIBRARY_PATH=~/Develop/lib
fi


# add python init file
#
if [ -f ~/.conf/python/pyrc ] ; then
	export PYTHONSTARTUP=~/.conf/python/pyrc
fi

if [ "$(which colorgcc)" ] ; then
	export CC="colorgcc"
fi

if [ "$(which vim)" ] ; then
	export EDITOR=vim
fi

export PAGER=less
export LANG=it-IT.utf-8
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'


# cheat variables
#
if [ "$(which cheat)" ]
then
	export CHEATCOLORS=true
	export DEFAULT_CHEAT_DIR=/usr/share/cheat/sheets
	export CHEATPATH=$DEFAULT_CHEAT_DIR:~/.cheat
	export CHEAT_TEXT_VIEWER=$PAGER
	#export CHEAT_IMAGE_VIEWER=
	#export CHEAT_PDF_VIEWER=
fi


# setting history
#
HISTSIZE=1000
HISTFILESIZE=2000
HISTCONTROL=ignoreboth
shopt -s histappend


# if running bash
#
if [ -n "$BASH_VERSION" ]; then
	if [ -f "$HOME/.bashrc" ]; then
		. "$HOME/.bashrc"
	fi
fi

