
# clear history
#
history -c
echo -e "\nHistory cleared"

sleep 0.5s
clear


# leaving message
#
echo -e "${txtcyn} "
if [ -x $(which figlet) ]
then
	figlet "Bye Bye..."
else
	echo -e "Bye Bye..."
fi
echo -e "${txtrst} "

sleep 1s
clear


# clear the screen
#
if [ "$SHLVL" = 1 ] ; then
	[ -x /usr/bin/clear_console ] && /usr/bin/clear_console -q
fi

