
# clear history
#
history -c
echo -e "\nhistory cleared"

sleep 0.5s
clear


# leaving message
#
echo -e "${txtcyn} "
[ "$(which figlet)" ] && figlet "Bye Bye..." || echo -e "Bye Bye..."
echo -e "${txtrst} "

sleep 1s
clear


# clear the screen
#
if [ "$SHLVL" = 1 ] ; then
	[ -x /usr/bin/clear_console ] && /usr/bin/clear_console -q
fi

